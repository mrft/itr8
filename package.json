{
  "name": "itr8",
  "version": "1.0.0",
  "description": "An experiment to create a unified interface such that the same reducers can be used in various contexts.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "prepare": "npm run build",
    "prebuild": "npm run clean",
    "build": "tsc --project .",
    "//postbuild": "npm run builddocs",
    "clean": "rm -rf ./dist",
    "builddocs": "typedoc src/index.ts src/interface/observable.ts src/interface/stream.ts",
    "//pretest": "npm run clean && mkdir -p ./dist && npm run build",
    "echoForTest": "echo -e \"01 this is stdin\n02 So we can do some stream tests in the program\n03\n04\"",
    "//pretest": "npm run build",
    "test": "npm run echoForTest | ./node_modules/.bin/mocha --exit --timeout 4000 --node-option max-old-space-size=150 --require ts-node/register ./test/*.ts",
    "posttest": "npm run build && npm run builddocs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "chai": "^4.3.6",
    "mocha": "^9.2.2",
    "rxjs": "^7.5.5",
    "ts-node": "^10.7.0",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.2"
  }
}
